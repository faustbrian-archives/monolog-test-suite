{
	"name": "@logks/test-suite",
	"version": "0.1.0",
	"description": "Test suite for Logks API compliance.",
	"homepage": "https://github.com/logks/test-suite",
	"bugs": {
		"url": "https://github.com/logks/test-suite/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:logks/test-suite.git"
	},
	"license": "MPL-2.0",
	"author": "Brian Faust <hello@basecode.sh>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json -p tslint-project.json 'src/**/*.ts' --fix",
		"prepublishOnly": "yarn format && yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"@logks/logks": "^0.1.0"
	},
	"devDependencies": {
		"@types/jest": "^24.0.15",
		"@types/node": "^12.6.2",
		"@typeskrift/tsconfig": "^0.1.2",
		"codecov": "^3.5.0",
		"jest": "^24.8.0",
		"jest-extended": "^0.11.2",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"ts-jest": "^24.0.2",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.3"
	}
}
